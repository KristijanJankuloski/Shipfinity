@model List<Category>
@{
    ViewData["Title"] = "Categories";
}

<div class="container">
    <div class="p-3">
        <div class="text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-success">Create new category</a>
        </div>
        <h1 class="display-3">All Categories</h1>
    </div>
    <div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var category in Model)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.Name</td>
                        <td>
                            <a asp-controller="Category" asp-action="Delete" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>